<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>


 <ul>
   <% @tasks.each do |task| %>
   <li>
      <strong>
        <%= link_to task.name, task_path(task) %>
      </strong>
      <%= task.completed %>
       <%= link_to 'edit', edit_task_path(task) %>
       <%= link_to 'delete', task_path(task), method: 'delete', data: { confirm: 'Are you sure?' } %>
       <%= link_to 'new', new_task_path(task) %>
    </li>

   <% end %>
 </ul>
